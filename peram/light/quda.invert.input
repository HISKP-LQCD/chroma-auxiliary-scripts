ompnumthreads = 1

L=24
T=96

DisableIOChecks = no
DebugLevel = 2
InitialStoreCounter = NSTORE
Measurements = 1
2kappamu = 0.0
kappa = 0.129082225

# use anti-periodic boundary conditions
# because we are using gauge compression, the QUDA interface 
# will use (-1) boundary conditions for this
# and ignore the phases 
BCAngleT = 1

GaugeConfigInputFile = GCONFBASE
UseEvenOdd = yes
UseRelativePrecision = yes

EnableSubProcess = no
EnableLowmem = yes

SourceType = Volume
ReadSource = no
NoSamples = 1

ranluxdlevel=2
reproducerandomnumbers=no

BeginOperator CLOVER
  2kappamu = 0.0
  csw = 1.0
  kappa = 0.129082225
  Solver = bicgstab
  usequdainverter = yes
  SolverPrecision = 1e-18
  MaxSolverIterations = 25000
  usesloppyprecision = half
  usecompression = 8
EndOperator

