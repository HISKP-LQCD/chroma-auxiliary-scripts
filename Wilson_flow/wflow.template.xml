<?xml version="1.0"?>
<!--
Input file for `chroma` that will load in a configuration file and compute the
Wilson flow.
-->
<chroma>
    <!-- Load the configuration. -->
    <Cfg>
        <cfg_type>SCIDAC</cfg_type>
        <cfg_file>{{ config_in_file }}</cfg_file>
    </Cfg>
    <Param>
        <nrow>16 16 16 32</nrow>
        <InlineMeasurements>
            <!-- Measure the plaquette -->
            <elem>
                <Name>PLAQUETTE</Name>
                <Frequency>1</Frequency>
                <Param>
                    <version>2</version>
                </Param>
                <NamedObject>
                    <gauge_id>default_gauge_field</gauge_id>
                </NamedObject>
                <xml_file>{{ xml_out_file }}</xml_file>
            </elem>
            <!-- Perform the smearing. -->
            <elem>
                <Name>WILSON_FLOW</Name>
                <Frequency>1</Frequency>
                <Param>
                    <version>2</version>
                    <nstep>100</nstep>
                    <wtime>1.0</wtime>
                    <t_dir>3</t_dir>
                </Param>

                <NamedObject>
                    <gauge_id>default_gauge_field</gauge_id>
                </NamedObject>

                <xml_file>{{ xml_out_file }}</xml_file>
            </elem>
        </InlineMeasurements>
    </Param>
</chroma>
