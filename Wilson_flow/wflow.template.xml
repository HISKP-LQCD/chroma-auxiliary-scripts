<?xml version="1.0"?>
<!--
Input file for `chroma` that will load in a configuration file and compute the
Wilson flow.
-->
<chroma>
    <Cfg>
        <cfg_type>SCIDAC</cfg_type>
        <cfg_file>{{ config_in_file }}</cfg_file>
    </Cfg>
    <Param>
        <nrow>16 16 16 32</nrow>
        <InlineMeasurements>
            <elem>
                <Name>WILSON_FLOW</Name>
                <Frequency>1</Frequency>
                <Param>
                    <version>2</version>
                    <nstep>500</nstep>
                    <wtime>5</wtime>
                    <t_dir>5</t_dir>
                </Param>

                <NamedObject>
                    <gauge_id>default_gauge_field</gauge_id>
                    <gauge_out>flowed_gauge_field</gauge_out>
                </NamedObject>

                <xml_file>{{ xml_out_file }}</xml_file>
            </elem>
        </InlineMeasurements>
    </Param>
</chroma>
